<Window x:Class="NSEON4_HFT_2021221.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NSEON4_HFT_2021221.WPFClient" 
        xmlns:local1="clr-namespace:NSEON4_HFT_2021221.WPFClient.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local1:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Label Content="Mobile Phone Database" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" FontWeight="Bold"/>

        <StackPanel Grid.Row="1">
            <Button Content="Phones" Command="{Binding ViewPhonesCommand}" Padding="10" Margin="30"/>
            <Button Content="Brands" Command="{Binding ViewBrandsCommand}" Padding="10" Margin="30"/>
            <Button Content="Headquarters" Command="{Binding ViewHeadquartersCommand}" Padding="10" Margin="30"/>
        </StackPanel>

    </Grid>
</Window>
